<Application x:Class="Autodesk.ADN.Slm.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:l="clr-namespace:Autodesk.ADN.Slm"
			 Startup="App_Startup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

		<ResourceDictionary>
			<!-- Converters -->
			<l:ImageSourceConverter x:Key="ImageSourceConverter" />

			<ResourceDictionary.MergedDictionaries>
				<!-- Set default skin -->
				<ResourceDictionary Source="/MayaTheme;component/Themes/Skins/QadskDarkStyle.xaml" />
				<ResourceDictionary Source="/MayaTheme;component/Themes/MayaStyle.xaml" />

				<!-- Xceed Toolkit Maya Scheme -->
				<ResourceDictionary Source="/Slm;component/Themes/xctk.xaml" />
				
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
		
	</Application.Resources>
</Application>
